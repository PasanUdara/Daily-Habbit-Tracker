<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WellnessTracker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="Theme.WellnessTracker" parent="Base.Theme.WellnessTracker" />
    
    <!-- Custom Card Style -->
    <style name="WellnessCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>
    
    <!-- Enhanced Card Style -->
    <style name="WellnessCardEnhanced" parent="WellnessCard">
        <item name="cardElevation">12dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    
    <!-- Custom Button Styles -->
    <style name="WellnessButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">26dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="WellnessFloatingButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_green</item>
        <item name="tint">@color/white</item>
        <item name="elevation">12dp</item>
        <item name="pressedTranslationZ">8dp</item>
    </style>
    
    <!-- Gradient Button Style -->
    <style name="WellnessGradientButton" parent="WellnessButton">
        <item name="android:background">@drawable/gradient_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Active Indicator Style -->
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/accent_purple_light</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <!-- Vibrant Card with Shadow -->
    <style name="VibrantCard" parent="WellnessCard">
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>